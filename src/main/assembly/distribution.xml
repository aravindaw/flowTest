<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>distribution</id>
    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>${appassembler.basedir}/lib</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*.zip</exclude>
                <exclude>maven-metadata-appassembler.xml</exclude>
            </excludes>
            <fileMode>0755</fileMode>
        </fileSet>

        <fileSet>
            <directory>${appassembler.basedir}/conf</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${appassembler.basedir}/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <fileSet>
            <directory>${appassembler.basedir}/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>

        <fileSet>
            <directory>${appassembler.basedir}/logs</directory>
            <outputDirectory>logs</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${appassembler.basedir}/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>WrapperTestApp.bat</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>dos</lineEnding>
        </fileSet>
        <fileSet>
            <directory>${appassembler.basedir}/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>wrapper-windows-x86-32.exe</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${appassembler.basedir}</directory>
            <outputDirectory>${appassembler.basedir}</outputDirectory>
            <includes>
                <include>*.txt</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>README.md</source>
            <outputDirectory>flowTest/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>LICENSE.md</source>
            <outputDirectory>flowTest/</outputDirectory>
        </file>
        <file>
            <source>NOTICE.md</source>
            <outputDirectory>flowTest/</outputDirectory>
            <filtered>true</filtered>
        </file>
    </files>
</assembly>